<ScreenOne>:
    BoxLayout:
        canvas:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size
        spacing: 10
        padding: 50
        orientation: "vertical"
        Image:
            source: "wyp.png"
            size_hint:(1.0, 0.70)
        Button:
            background_normal: ""
            background_color: 0.55, 0.35, 0.20, 1
            text: "Classify Pupper"
            color: 0.95, 0.95, 0.95, 1
            font_size: 18
            bold: True
            size_hint:(1.0, 0.15)
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'select_photo'
        Button:
            background_normal: ""
            background_color: 0.55, 0.35, 0.20, 1
            text: "Take Quiz"
            color: 0.95, 0.95, 0.95, 1
            font_size: 18
            bold: True
            size_hint:(1.0, 0.15)
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'screen_three'

        Button:
            background_normal: ""
            background_color: 0.55, 0.35, 0.20, 1
            text: "View Rankings"
            color: 0.95, 0.95, 0.95, 1
            font_size: 18
            bold: True
            size_hint:(1.0, 0.15)
            on_press:
                root.manager.transition.direction = 'left'

                c = root.read_rankings(app)

                if c == 0: root.manager.current = 'no_rankings'
                else: root.manager.current = 'rankings'

        Button:
            background_normal: ""
            background_color: 0.55, 0.35, 0.20, 1
            text: "Terms and Conditions"
            color: 0.95, 0.95, 0.95, 1
            font_size: 18
            bold: True
            size_hint:(1.0, 0.15)
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'terms_and_conditions'

        Button:
            background_normal: ""
            background_color: 0.55, 0.35, 0.20, 1
            text: "Exit"
            color: 0.95, 0.95, 0.95, 1
            font_size: 18
            bold: True
            size_hint:(1.0, 0.15)
            on_press:
                app.stop() 

