<Cam>:
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
			resolution: (640, 480)
            play: True
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press:
                filename = root.capture()
				app.ar1 = root.select(filename)
